
@{
    ViewBag.Title = "Water Calculator";
}

<div class="labContainer">
    <h2 id="about">@ViewBag.Title</h2>

    <h3>How many gallons of water do you have?</h3>
    <form method="get">
        <div class="row">
            <div class="col-md-4"><input type="number" name="userGal" /></div>
        </div>

        <br />

        <h3>I know it's an odd question, but how many arms do you have?</h3>
        <div class="row">

            <div class="col-md-4"><input type="number" name="userArms" /></div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <input type="submit" class="btn btn-success" value="???" />
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Redo!", "WaterLab", "MiniProjects", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </form>

    <h3>@ViewBag.Answer</h3>


    <a href="@Url.Action("Index", "MiniProjects")">Go Back</a>

</div>

@section diffScripts{
    <script src="~/Content/assets/vendor/jquery/jquery.min.js"></script>
}